@using Crm.Employees
@using Crm.Customers
@using Crm.Projects
@using Crm.Common
@using System.ComponentModel.DataAnnotations

@inject IEmployeeAppService EmployeeAppService
@inject ICustomerAppService CustomerAppService
@inject IProjectAppService ProjectAppService
@inject Microsoft.Extensions.Localization.IStringLocalizer<Crm.Localization.CrmResource> L

<CascadingValue Value="this">
    <Modal @ref="modalRef">
        <ModalContent Centered>
            <ModalHeader>
                <ModalTitle>@L["Edit Activity"]</ModalTitle>
            </ModalHeader>
            <ModalBody>

                <!--Name-->
                <Field>
                    <FieldLabel>@L["Name"]:</FieldLabel>
                    <InputText @bind-Value="ProjectUpdateDto.Name" class="form-control" />
                </Field>

                <!--Description-->
                <Field>
                    <FieldLabel>@L["Description"]:</FieldLabel>
                    <InputText @bind-Value="ProjectUpdateDto.Description" class="form-control" />
                </Field>

                <!--Start Time-->
                <Card>
                    <Field>
                        <FieldLabel>@L["Start Time"]:</FieldLabel>
                        <DatePicker TValue="DateTime?" InputMode="DateInputMode.DateTime" @bind-Date="selectedStartTime" Format="yyyy-MM-dd HH:mm" />
                    </Field>
                </Card>

                <!--End Time-->
                <Card>
                    <Field>
                        <FieldLabel>@L["End Time"]:</FieldLabel>
                        <DatePicker TValue="DateTime?" InputMode="DateInputMode.DateTime" @bind-Date="selectedEndTime" Format="yyyy-MM-dd HH:mm" />
                    </Field>
                </Card>

                <!--Status-->
                <Field>                                   
                    <FieldLabel>@L["Status"]:</FieldLabel>
                    <Select @bind-SelectedValue="selectedStatus">
                        @foreach (var status in Enum.GetValues(typeof(EnumStatus)).Cast<EnumStatus>())
                        {
                            <SelectItem Value="@status">@status</SelectItem>
                        }
                    </Select>
                </Field>

                <!--Revenue-->
                <Field>
                    <FieldLabel>@L["Revenue"]:</FieldLabel>
                    <InputNumber @bind-Value="ProjectUpdateDto.Revenue" class="form-control" />
                </Field>

                <!--Success Rate-->
                <Field>
                    <FieldLabel>@L["SuccessRate"]:</FieldLabel>
                    <InputNumber @bind-Value="ProjectUpdateDto.SuccessRate" class="form-control" />
                </Field>               

                <!--Customer-->
                <Field>
                    <FieldLabel>@L["Customer"]:</FieldLabel>
                    <Select TValue="Guid" @bind-SelectedValue="@selectedCustomerId">
                        <SelectItem Value="Guid.Empty">@L["Select"]</SelectItem>
                        @foreach (var customer in CustomerList)
                        {
                            <SelectItem Value="@customer.Id">@customer.Name @customer.Surname</SelectItem>
                        }
                    </Select>
                </Field>

            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary" Clicked="@HideModal">@L["Close"]</Button>
                <Button Color="Color.Primary" Clicked="@UpdateProjectAsync">@L["Save Changes"]</Button>
            </ModalFooter>
        </ModalContent>
    </Modal>
</CascadingValue>
