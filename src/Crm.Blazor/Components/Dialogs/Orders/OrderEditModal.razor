@using Crm.Common
@using Crm.Customers
@using Crm.Orders
@using Crm.Projects

@inject IOrderAppService OrderAppService
@inject ICustomerAppService CustomerAppService
@inject IProjectAppService ProjectAppService
@inject Microsoft.Extensions.Localization.IStringLocalizer<Crm.Localization.CrmResource> L

<CascadingValue Value="this">
    <Modal @ref="modalRef">
        <ModalContent Centered>
            <ModalHeader>
                <ModalTitle>@L["Edit Order"]</ModalTitle>
                <CloseButton />
            </ModalHeader>
            <ModalBody>

                <!--Order Code-->
                <Field>
                    <FieldLabel>@L["Order Code"]:</FieldLabel>
                    <InputText @bind-Value="OrderUpdateDto.OrderCode" class="form-control" />
                </Field>

                <!--Customer-->
                <Field>
                    <FieldLabel>@L["Customer"]:</FieldLabel>
                    <Select TValue="Guid" @bind-SelectedValue="OrderUpdateDto.CustomerId">
                        <SelectItem Value="Guid.Empty">@L["Select Customer"]</SelectItem>
                        @foreach (var customer in CustomerList)
                        {
                            <SelectItem Value="@customer.Id">@customer.FullName</SelectItem>
                        }
                    </Select>
                </Field>

                <!--Project-->
                <Field>
                    <FieldLabel>@L["Project"]:</FieldLabel>
                    <Select TValue="Guid" @bind-SelectedValue="OrderUpdateDto.ProjectId">
                        <SelectItem Value="Guid.Empty">@L["Select Project"]</SelectItem>
                        @foreach (var project in ProjectList)
                        {
                            <SelectItem Value="@project.Id">@project.Name</SelectItem>
                        }
                    </Select>
                </Field>

                <!--Order Date-->
                <Card>
                    <Field>
                        <FieldLabel>@L["Order Date"]:</FieldLabel>
                        <DatePicker TValue="DateTime?" InputMode="DateInputMode.DateTime" @bind-Date="OrderUpdateDto.OrderDate" Format="yyyy-MM-dd HH:mm" />
                    </Field>
                </Card>

                <!--Delivery Date-->
                <Card>
                    <Field>
                        <FieldLabel>@L["Delivery Date"]:</FieldLabel>
                        <DatePicker TValue="DateTime?" InputMode="DateInputMode.DateTime" @bind-Date="OrderUpdateDto.DeliveryDate" Format="yyyy-MM-dd HH:mm" />
                    </Field>
                </Card>

                <!--Status-->
                <Field>
                    <FieldLabel>@L["Status"]:</FieldLabel>
                    <Select @bind-SelectedValue="OrderUpdateDto.Status">
                        @foreach (var status in Enum.GetValues(typeof(EnumStatus)).Cast<EnumStatus>())
                        {
                            <SelectItem Value="@status">@status</SelectItem>
                        }
                    </Select>
                </Field>

            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary" Clicked="@HideModal">@L["Close"]</Button>
                <Button Color="Color.Primary" Clicked="@UpdateOrderAsync">@L["Save Changes"]</Button>
            </ModalFooter>
        </ModalContent>
    </Modal>
</CascadingValue>
